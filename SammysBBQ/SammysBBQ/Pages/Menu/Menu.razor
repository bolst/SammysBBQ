@page "/menu"
@using SammysBBQ.Data

<Row Margin="Margin.IsAuto" RowColumns="RowColumns.Are1">
    <Column TextAlignment="TextAlignment.Center">

        <MenuImages />

        <Jumbotron Width="Width.Is75" Margin="Margin.IsAuto" Background="Background.Dark"
            Style="box-shadow: var(--b-theme-primary) 0px 2px 12px 0px;">

            <JumbotronTitle Size="JumbotronTitleSize.Is1">BBQ Menu</JumbotronTitle>

            <Divider />

            <UnorderedList Unstyled>
                @foreach (string item in MenuItemController.Instance.BBQMenuItems())
                {
                    <UnorderedListItem>
                        <JumbotronSubtitle>@item</JumbotronSubtitle>
                    </UnorderedListItem>
                }
            </UnorderedList>

        </Jumbotron>

        <MenuOrderPrompt />

    </Column>

</Row>